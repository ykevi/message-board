<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <div style="margin-top: 0.25%">
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
      </div>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  名前:
  <%= f.text_field :name, class: "form-control" %>

  内容:
  <%= f.text_area :body, class: "form-control", style: "resize: none"  %>
  <%= f.submit class: "btn btn-sm btn-primary", style: "margin-top: 1%" %>
<% end %>